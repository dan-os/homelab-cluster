{
  "files.associations": {
    // "*.json5": "jsonc",
  },
  "prettier.configPath": ".ci/prettier/.prettierrc.yaml",
  "prettier.ignorePath": ".ci/prettier/.prettierignore",
  "yaml.schemas": {
    "kubernetes": ["cluster/*.yml", "cluster/*.yaml"]
